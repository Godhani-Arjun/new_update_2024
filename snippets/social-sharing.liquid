<div class="social-sharing">
  
  {% if sharing_lbl != blank %}<span class="lbl">{{settings.sharing_lbl}}</span>{% endif %}
  
  {% if settings.share_facebook %}
  <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn--share share-facebook" title="{{ 'general.social.alt_text.share_on_facebook' | t }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=380,width=660');return false;">
    <i class="ad ad-facebook-f" aria-hidden="true"></i> <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
  </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="social-icons__link btn--share share-twitter" href="{{ settings.social_twitter_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}" target="_blank">
    
<svg  class="ad ad-twitter" width="17" height="15" viewBox="0 0 17 15" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M5.85605 0.5H0.956055L6.73805 8.2098L1.27105 14.5H3.12605L7.59765 9.3557L11.4561 14.5H16.3561L10.3305 6.4654L15.5161 0.5H13.6611L9.47085 5.3202L5.85605 0.5ZM12.1561 13.1L3.75605 1.9H5.15605L13.5561 13.1H12.1561Z" fill="#3D4936"/>
  </svg>
  <span class="share-title">Tweet</span> </a>
  {% endif %}
  {% if settings.share_insta %}
		<a class="social-icons__link btn--share share-instagram" href="{{ settings.social_instagram_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}" target="_blank">
	    
