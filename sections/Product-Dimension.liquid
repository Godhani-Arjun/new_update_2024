<div class="product-dimensions">
    <a href="javascript:void(0);" class="product-dimensions-btn" onclick="openDimensionsPopup()">Product Dimensions</a>
</div>

<!-- The Modal -->
<div id="dimensionsModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeDimensionsPopup()">&times;</span>
        <div id="dimensionsContent">{{ product.metafields.custom.dimensions }}</div>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>

<script>
    function openDimensionsPopup() {
        document.getElementById("dimensionsModal").style.display = "block";
    }

    function closeDimensionsPopup() {
        document.getElementById("dimensionsModal").style.display = "none";
    }
</script>