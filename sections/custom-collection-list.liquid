    CSS
    ------------------------------------------------------------------------------------------------------------------------
  {%- endcomment -%}

  <style>
       #shopify-section-{{ section.id }} {
           {%- if section.settings.stack_collections -%}
           	--collection-list-items-per-row: 1;
           {%- else -%}
               --collection-list-item-size: 84vw;
           {%- endif -%}

           {%- if section.settings.space_items -%}
               --collection-list-gap: 1.5rem;
           {%- endif -%}
    }

       .{{ section.settings.unique_class }} {
        padding-block-end: unset;
        }
       .{{ section.settings.unique_class }} h2{
        font-family: "Futura Medium BT";
        font-weight: 400;
        font-size: 40px;
        line-height: 52px;
        color: #000000;
       }
                 .custom_featured_collection_second {padding-top: 100px;}
                 .{{ section.settings.unique_class }} .inner_button {
                   display: none;
                 }

                 .{{ section.settings.unique_class }} .section-stack {
                   row-gap: 30px;
                 }

                 .{{ section.settings.unique_class }} .collection-card {
                   gap:20.05px;
                   max-width: 480px;
                   margin: auto;
                 }

                 .{{ section.settings.unique_class }} button {
                   font-family: "Roboto", sans-serif;
                   font-weight: 400;
                   font-size: 18px;
                   line-height: 23.4px;
                   letter-spacing: 0.4px !important;

                 }

              .image_two {
                  top: 0;
                  left: 0;
                  overflow: hidden;
                  position: absolute;
                  transform: translateY(100%);
                  transition: transform 0.5s ease;
                }

                .custom_effect {
                  display: block;
                  position: relative;

                }

                .image-container {
                  position: relative;
                  overflow: hidden;
                  display:flex;
                  align-items: stretch;
                }

                .button_section {
                  left: 0;
                  bottom: 0;
                  width: 100%;
                  height: 100%;
                  position: absolute;
                  transform: translateY(100%);
                  transition: transform 0.5s ease;
                }

                .image-container:hover .image_two,
                .image-container:hover .button_section {
                  transform: translateY(0%);
               }

           .hover_button {
                  position: absolute;
                  bottom: 0;
                  width: 100%;
                  background: #000;
                  color: #fff;
                  border: 0;
                  border-radius: 0;
                  margin: auto;
                  max-width: 85%;
                  left: 0;
                  right: 0;
                  bottom: 30px;
                  z-index: 3;
                  font-size: 18px;
                  line-height: 23px;
                  letter-spacing: 1px;
                  padding: 16.5px 28px;
                  text-align: center;
                  text-transform: uppercase;
                  display:flex;
                  align-items: center;
                  justify-content: center;
                  transition: all 0.5s ease;
                  font-weight: 700;
              }

              .hover_button svg{
               transform: translateX(0);
               transition-delay: 0.3s;
               opacity:0;
              }

              .image-container:hover .hover_button svg{
               transform: translateX(15px);
               opacity:1;
               transition: all 0.5s ease;
               transition-delay: 0.6s;
              }
              .{{ section.settings.unique_class }} .custom_button {
                    background: transparent !important;
                    border: none !important;
                    padding: 0 !important;
                  }


                  @media(min-width:1921px){
                   .collection-list--text-outside{max-width:1920px;margin: 0 auto;}
                  }
                  @media(max-width:1023px){
                   .{{ section.settings.unique_class }} h2{
                     font-size: 24px;
                     line-height: 31px;
                   }
                  }
       @media(max-width:989px){
         .custom_featured_collection_second{padding-top: 50px;}
       }
                  @media (max-width: 699px) {



                   .{{ section.settings.unique_class }} .collection-card {
                     gap:0px;
                   }




                   .{{ section.settings.unique_class }} .collection-list--text-outside {
                     row-gap: 15px;
                   }
               }

                  @media screen and (min-width: 700px) {
                    #shopify-section-{{ section.id }} {
                      {%- if section.settings.stack_collections -%}
                        --collection-list-items-per-row: {{ 2 | at_most: section.settings.collections_per_row_desktop }};
                      {%- else -%}
                        --collection-list-item-size: 62vw;
                      {%- endif -%}
                    }
                  }

                  @media screen and (min-width: 1150px) {
                    #shopify-section-{{ section.id }} {
                      --collection-list-item-size: unset;
                      --collection-list-items-per-row: {{ section.settings.collections_per_row_desktop }};

                      {%- if section.settings.space_items -%}
                        --collection-list-gap: 1.875rem;
                      {%- endif -%}
                    }
                  }
                  @media(max-width:1024px){
                   .custom_featured_collection_second  .content-over-media--auto .button_section{transform: translateY(0%);}
                   .custom_featured_collection_second  .content-over-media--auto .button_section .hover_button{
                     width:189px;max-width:189px;
                     height:55px;
                     font-size: 14px;
                     line-height: 23px;
                     left: 30px;
                     right: auto;
                     padding: 16.5px 25px;
                     text-align: left;
                     font-weight: 700;
                     letter-spacing: 1px;
                   }

                   .custom_featured_collection_second button{font-size: 20px;line-height: 28.6px;font-weight: 600;}
               .{{ section.settings.unique_class }} .inner_button {
                 position: absolute;
                 font-family: 'Roboto';
                 color: white;
                 font-weight: 600;
                 font-size: 22px;
                 line-height: 28.6px;
                 letter-spacing: 0.4px;
                 display: flex;
                 align-items: center;
                 justify-content: center;
                 height: 100%;
               width: 100%;
                   }

                   .image_two {
                     opacity: 0 !important;
                   }


                   .hover_button{
                     display: none;
                   }

                   .{{ section.settings.unique_class }} .bottom_button {
                     display: none;
                   }

                   .button_section:before {
                     content: "";
                     position: absolute;
                     background: #00000033;
                     top: 0;
                     left: 0;
                     bottom: 0;
                     right: 0;
                 }

                   .hover_button:before{right:15px;}
                   .image-container:hover .hover_button:before {transform: translateX(0);}

                  }
                  @media(max-width:749px){
                   .custom_featured_collection_second{padding-top: 50px;}
                   .custom_featured_collection_second .section-stack{row-gap:20px;}
                  }
  </style>

  {%- comment -%}
