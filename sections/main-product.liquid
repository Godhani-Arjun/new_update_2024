<script>
document.addEventListener('DOMContentLoaded', function() {
    // Set initial active tab and content
    document.querySelector('.template--new-product .product-tab-column .tab-heading[data-index="1"]').classList.add('active');
    document.querySelector('.template--new-product .product-tab-column .tab-content[data-index="1"]').classList.add('active');

    // Add click event listener to tab headings
    document.querySelectorAll('.template--new-product .product-tab-column .tab-heading').forEach(function(tab) {
        tab.addEventListener('click', function() {
            const contentIndex = this.dataset.index;

            // Remove active class from all tab headings
            document.querySelectorAll('.template--new-product .product-tab-column .tab-heading').forEach(function(item) {
                item.classList.remove('active');
            });

            // Add active class to the clicked tab heading
            this.classList.add('active');

            // Remove active class from all tab contents
            document.querySelectorAll('.template--new-product .product-tab-column .tab-content').forEach(function(content) {
                content.classList.remove('active');
            });

            // Add active class to the corresponding tab content
            const activeContent = document.querySelector(`.template--new-product .product-tab-column .tab-content[data-index="${contentIndex}"]`);
            if (activeContent) {
                activeContent.classList.add('active');
            }
        });
    });
});

</script>
